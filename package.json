{
  "name": "quickmessenger",
  "version": "1.0.0",
  "description": "Cross-platform IP messaging app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "server": "node server.js",
    "debug": "electron . --remote-debugging-port=9222",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "build-server": "pkg server.js",
    "build-server-win": "pkg server.js --targets node18-win-x64 --out-path dist/server/win",
    "build-server-mac": "pkg server.js --targets node18-macos-x64 --out-path dist/server/mac",
    "build-server-linux": "pkg server.js --targets node18-linux-x64 --out-path dist/server/linux",
    "build-server-all": "npm run build-server-win && npm run build-server-mac && npm run build-server-linux"
  },
  "author": "QuickMessenger",
  "license": "GPL-3.0 license",
  "devDependencies": {
    "electron": "^38.1.0",
    "electron-builder": "^24.0.0",
    "pkg": "^5.8.1"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "crypto-js": "^4.1.1",
    "dotenv": "^17.2.2",
    "electron-store": "^8.1.1",
    "jsonwebtoken": "^9.0.2",
    "speakeasy": "^2.0.0",
    "uuid": "^9.0.0",
    "ws": "^8.13.0"
  },
  "pkg": {
    "scripts": "server.js",
    "assets": [],
    "directories": {
      "output": "dist/server"
    }
  },
  "build": {
    "appId": "com.quickmessenger.app",
    "productName": "QuickMessenger",
    "directories": {
      "output": "dist/client"
    },
    "icon": "icon/icon.png"
  }
}
